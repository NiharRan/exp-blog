<div class="row">
    <div class="col-md-8 col-sm-12 offset-md-2">
        <form action="/posts/{{ post.post_id }}" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" name="title" value="{{ post.title }}" class="form-control {{#if errors.title }} is-invalid {{/if}}" placeholder="Post Title">
                {{#if errors.title }}
                <span class="text-danger">{{ errors.title.msg }}</span>
                {{/if}}
            </div>
            <div class="form-group">
                <input type="text" name="author" value="{{ post.author }}" class="form-control" placeholder="Post Author">
            </div>
            <div class="form-group">
                <textarea name="content" rows="4" class="form-control">{{ post.content }}</textarea>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <input type="file" name="image" class="custom-file-input">
                    <label class="custom-file-label">Image</label>
                </div>
                <img class="mt-2 rounded" src="/posts/responsive/sm/{{ post.image }}" alt="">
            </div>
            <div class="form-group mb-0">
                <input type="hidden" name="old_image" value="{{ post.image }}">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>
    </div>
</div>